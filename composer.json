{
  "name": "davidhirtz/yii2-media-video",
  "description": "Video extension for media management module based on Yii 2.0 framework",
  "license": "proprietary",
  "type": "yii2-extension",
  "homepage": "https://www.github.com/davidhirtz/yii2-media-video",
  "authors": [
    {
      "name": "David Hirtz",
      "homepage": "https://www.davidhirtz.com/"
    }
  ],
  "require": {
    "davidhirtz/yii2-media": "^2.1",
    "james-heinrich/getid3": "^1.9"
  },
  "require-dev": {
    "codeception/codeception": "^5.0",
    "codeception/module-asserts": "*",
    "codeception/module-filesystem": "^3.0",
    "codeception/module-phpbrowser": "*",
    "codeception/module-yii2": "*",
    "codeception/specify": "^2.0",
    "codeception/verify": "^3.0",
    "phpro/grumphp-shim": "^2.4",
    "phpunit/phpunit": "^9",
    "rector/rector": "^1",
    "symplify/easy-coding-standard": "^12.0",
    "yiisoft/yii2-debug": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "davidhirtz\\yii2\\media\\video\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "davidhirtz\\yii2\\media\\video\\tests\\": "tests"
    }
  },
  "config": {
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "phpro/grumphp-shim": true
    }
  },
  "extra": {
    "bootstrap": "davidhirtz\\yii2\\media\\video\\Bootstrap"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G",
    "rector": "rector",
    "test": "codecept run"
  }
}
